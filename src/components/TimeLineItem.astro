---
interface Props {
  title: string;
  description: string;
  institute: string;
  date: string;
}

const { description, title, date, institute } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-slate-900 rounded-full mt-1.5 -start-1.5 border border-white/50"
>
</div>
<time
  class="mb-1 text-base font-normal leading-none text-gray-400 dark:text-gray-200"
  >{date}</time
>
<h2 class="text-2xl font-semibold text-white text-balance">
  {title}
</h2>
<h3 class="text-lg font-normal text-teal-500">
  {institute}
</h3>
<p class="mb-4 text-lg font-normal text-slate-400 text-pretty">
  {description}
</p>
